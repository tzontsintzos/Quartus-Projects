    signal signala,signalb : std_logic_vector (0 downto 0);
    signal operation : std_logic_vector (1 downto 0);
begin 
NOT_a <= NOT a;
NOT_b <= NOT b;

u0 : andGate port map (outnotA,outnotB,outAND);
